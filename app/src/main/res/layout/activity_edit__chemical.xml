<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Edit_Chemical">


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="382dp"
                 android:layout_height="480dp"
                 android:stretchColumns="1" android:layout_marginBottom="8dp"
                 app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                 app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                 android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginStart="8dp">

        <EditText
                android:id="@+id/name"
                android:hint="Name of Chemical"
                android:gravity="center"
        />

        <TableRow>
            <TextView
            android:text="LD50"
            android:gravity="center"/>

            <EditText
                    android:id="@+id/ld50_input"
                    android:hint="LD50"
                    android:gravity="center"
                    android:padding="10dip" />
            <TextView
                    android:text="LC50"
                    android:gravity="center"/>
            <EditText
                    android:id="@+id/lc50_input"
                    android:hint="LC50"
                    android:gravity="center"
                    android:padding="10dip" android:layout_width="150dp"/>
        </TableRow>
        <TableRow>
            <TextView
                    android:text="Dermal"
                    android:gravity="center"
            />
            <EditText
                    android:id="@+id/dermal_input"
                    android:padding="10dip"
                    android:gravity="center"
                    android:hint="Dermal" />
            <TextView
                    android:text="Inhalation"
                    android:gravity="center"/>
            <EditText
                    android:id="@+id/inhalation_input"
                    android:hint="Inhalation"
                    android:gravity="center"
                    android:padding="10dip"/>
        </TableRow>
        <Button
                android:text="Save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/save"
                android:layout_marginBottom="116dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.414"/>

    </TableLayout>



</android.support.constraint.ConstraintLayout>